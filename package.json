  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "foundation-sites": "^6.6.3",
    "node-sass": "^4.14.1",
    "concurrently": "^5.2.0"
  }
}
